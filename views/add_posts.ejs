<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add posts</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <!-- header -->
    <%- include('header'); -%>
        <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
            <h1 class="text-xl"> Create a new post </h1>
            <hr class="opacity-10 mt-2">
            <form class="" action="/upload" method="post" enctype="multipart/form-data">
                <!--the enctype is necessary for file upload-->
                <input type="text" name="filecaption"
                    class="mt-5 py-3 text-black block w-1/3 px-3 py-2 border-2 rounded-md" placeholder="Caption">

                <textarea type="text" name="filedesc"
                    class="py-6 text-black block w-1/3 px-3 py-2 mt-5 border-2 rounded-md"
                    placeholder="Description"></textarea>

                <input type="file" class="block w-1/3 px-3 py-2 border-2 rounded-md mt-5 cursor-pointer transition duration-300 ease-in-out hover:bg-gray-400 hover:border-black
                hover:shadow-lg hover:text-black rounded-l-2" name="file" id="file">

                <input type="submit" id="submit" class="block w-1/7 px-3 py-2 bg-red-700 rounded-md mt-5 cursor-pointer p-2
                    transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-80
                focus:invalid:border-pink-500 focus:invalid:ring-pink-500" name="submit" value="Create Post">
            </form>
        </div>
        <%- include('footer'); -%>
            <!-- footer -->
             <script>
                document.querySelector("#submit").addEventListener("click", (event) => {
            const fileInput = document.querySelector("#file");
            if (fileInput.files.length > 0) {
                alert('Post successfully uploaded');
            } else {
                event.preventDefault(); // Prevent form submission
                alert('Please choose a file');
            }
        });
             </script>
</body>

</html>