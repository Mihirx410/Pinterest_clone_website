<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link rel="stylesheet" href="/stylesheets/index.css">
</head>

<body>
  <div class="container">
    <div class="content">
      <!--pinterest logo-->
      <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo"
        class="img1" />
      <p class="header">Signup to Pinterest</p>

      <form action="/register" method="post">
        <input type="email" placeholder="Email" name="email" class="detail" required /><br />
        <input type="text" name="username" placeholder="Username" class="detail" required />
        <input type="text" name="fullname" placeholder="Full Name" class="detail" required />
        <input type="password" name="password" placeholder="Password" class="detail" required />
        <!--error is an array so we"ll use length-->
        <% if(error.length>0){%>
          <p class="error">
            <%= error %>
          </p>
          <% } %>
            <input type="submit" class="btn int" value="Register Your Account">
      </form>

      <!-- <a href="/forgotpass">Forgot your password?</a> -->

      <p class="or">OR</p>
      <button class="btn fbk">
        <i class="fab fa-facebook fa-lg" style="color: white; padding-right: 10px"></i><a href="#" id="facebook-register">Continue with
          Facebook</a></button><br />
      <button class="btn ggl">
        <i class="fab fa-google" style="color: rgb(11, 241, 22); padding-right: 10px"></i><a href="#" id="google-register">Continue with
          Google</a>
      </button>

      <footer>
        <p>
          By continuing, you agree to Pinterest's
          <b>Terms of Service, Privacy policy.</b>
        </p>
        <hr />
        <a href="/login">Already on Pinterest? Login here</a>
      </footer>
    </div>
  </div>
  <!-- <div class="upbtn">Sign up</div> -->

  <script>
    document.getElementById('google-register').addEventListener('click',()=>{
      alert('Sign-up with Google is not available yet')
    })

    document.querySelector('#facebook-register').addEventListener('click',()=>{
      alert('Sign-up with Facebook is not available yet')
    })
  </script>
</body>

</html>